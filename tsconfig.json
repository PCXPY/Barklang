{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2016",
            "dom"
        ],
        "module": "commonjs",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "dist",
        "removeComments": true,
        "sourceMap": false,
        "strict": true,
        "target": "es5"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}